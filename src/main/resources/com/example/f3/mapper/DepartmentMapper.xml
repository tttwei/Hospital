<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.f3.mapper.DepartmentMapper">
    <select id="queryById" resultType="com.example.f3.entity.Department">
        select * from department where id = #{id}
    </select>
    <select id="list" resultType="com.example.f3.entity.Department">
        select * from department
        <where>
            <if test="name!=null and name!=''">
                and name like concat('%',#{name},'%')
            </if>
        </where>
        order by id desc
    </select>
</mapper>